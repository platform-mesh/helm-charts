{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "local>platform-mesh/.github:renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)local-setup/kustomize/components/ocm-component/component\\.yaml$"
      ],
      "matchStrings": [
        "semver:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "registryUrlTemplate": "ghcr.io",
      "versioningTemplate": "semver",
      "depNameTemplate": "platform-mesh/component-descriptors/github.com/platform-mesh/platform-mesh",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "ignoreUnstable": true
    }
  ]
}
