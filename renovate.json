{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "local>platform-mesh/.github:renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)local-setup/kustomize/components/ocm-component/component\\.yaml$"
      ],
      "matchStrings": [
        "semver:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)\\s+#\\s*renovate:\\s*datasource=(?<datasource>\\w+)\\s+registryUrl=(?<registryUrl>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)\\s+versioning=(?<versioning>\\S+)"
      ],
      "datasourceTemplate": "oci",
      "registryUrlTemplate": "{{registryUrl}}",
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "{{versioning}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)local-setup/kustomize/components/platform-mesh-operator-resource/platform-mesh\\.yaml$"
      ],
      "matchStrings": [
        "- (?<depName>xpkg\\.upbound\\.io/crossplane-contrib/provider-keycloak):v(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "ignoreUnstable": true
    }
  ]
}
