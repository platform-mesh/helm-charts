{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "local>platform-mesh/.github:renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "OCM Component version",
      "managerFilePatterns": [
        "/(^|/)local-setup/kustomize/components/ocm/component\\.yaml$/"
      ],
      "matchStrings": [
        "semver:\\s*(?<currentValue>[\\d\\.]+-[\\w\\.-]+)"
      ],
      "versioningTemplate": "semver",
      "depNameTemplate": "ghcr.io/platform-mesh/component-descriptors/github.com/platform-mesh/platform-mesh",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "OCM toolkit version",
      "managerFilePatterns": [
        "/(^|/)local-setup/kustomize/base/ocm-k8s-toolkit/ocm-k8s-toolkit\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*\"?(?<currentValue>[\\d\\.]+)\"?"
      ],
      "versioningTemplate": "semver",
      "depNameTemplate": "ghcr.io/open-component-model/charts/ocm-k8s-toolkit",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Allow pre-release updates for OCM component",
      "matchManagers": [
        "custom.regex"
      ],
      "matchFileNames": [
        "**/ocm/component.yaml"
      ],
      "ignoreUnstable": false
    }
  ]
}
