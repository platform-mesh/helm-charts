{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "local>platform-mesh/.github:renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "OCM Component with the latest version",
      "fileMatch": [
        "(^|/)local-setup/kustomize/components/ocm-latest/component\\.yaml$"
      ],
      "matchStrings": [
        "semver:\\s*(?<currentValue>[\\d\\.]+-[\\w\\.-]+)"
      ],
      "versioningTemplate": "semver",
      "depNameTemplate": "ghcr.io/platform-mesh/component-descriptors/github.com/platform-mesh/platform-mesh",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "OCM Component released version",
      "fileMatch": [
        "(^|/)local-setup/kustomize/components/ocm/component\\.yaml$"
      ],
      "matchStrings": [
        "semver:\\s*(?<currentValue>[\\d\\.]+)"
      ],
      "versioningTemplate": "semver",
      "depNameTemplate": "ghcr.io/platform-mesh/component-descriptors/github.com/platform-mesh/platform-mesh",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "ignoreUnstable": false
    }
  ]
}
