disable Istio, enable Gateway API - match the Snapshot:
  1: |
    apiVersion: gateway.networking.k8s.io/v1
    kind: HTTPRoute
    metadata:
      name: kubernetes-graphql-gateway
      namespace: platform-mesh-system
    spec:
      hostnames:
        - portal.localhost
        - '*.portal.localhost'
      parentRefs:
        - name: k8sapi-gateway
      rules:
        - backendRefs:
            - name: kubernetes-graphql-gateway
              namespace: platform-mesh-system
              port: 8080
          filters:
            - cors:
                allowCredentials: true
                allowHeaders:
                  - '*'
                allowMethods:
                  - '*'
                allowOrigins:
                  - '*'
                maxAge: 5
              type: CORS
            - type: URLRewrite
              urlRewrite:
                path:
                  replacePrefixMatch: /
                  type: ReplacePrefixMatch
          matches:
            - path:
                type: PathPrefix
                value: /api/kubernetes-graphql-gateway/
