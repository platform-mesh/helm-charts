  2: |
    apiVersion: networking.istio.io/v1alpha3
    kind: DestinationRule
    metadata:
      name: platform-mesh-kubernetes-graphql-gateway
      namespace: platform-mesh-system
    spec:
      host: platform-mesh-kubernetes-graphql-gateway.platform-mesh-system.svc.cluster.local
      trafficPolicy:
        tls:
          mode: ISTIO_MUTUAL
  3: |
    apiVersion: security.istio.io/v1beta1
    kind: PeerAuthentication
    metadata:
      name: platform-mesh-kubernetes-graphql-gateway
      namespace: platform-mesh-system
    spec:
      mtls:
        mode: STRICT
      selector:
        matchLabels:
          app: platform-mesh-kubernetes-graphql-gateway
  4: |
    apiVersion: networking.istio.io/v1alpha3
    kind: VirtualService
    metadata:
      name: platform-mesh-kubernetes-graphql-gateway
      namespace: platform-mesh-system
    spec:
      gateways:
        - platform-mesh-system/gateway
      hosts:
        - '*'
      http:
        - corsPolicy:
            allowHeaders:
              - Authorization
              - Content-Type
              - '*'
            allowMethods:
              - GET
              - POST
            allowOrigins:
              - regex: .*
          match:
            - uri:
                prefix: /kubernetes-graphql-gateway/
          rewrite:
            uri: /
          route:
            - destination:
                host: platform-mesh-kubernetes-graphql-gateway.platform-mesh-system.svc.cluster.local
                port:
                  number: 8080
  5: |
    apiVersion: v1
    kind: ServiceAccount
