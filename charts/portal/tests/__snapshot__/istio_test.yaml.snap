                  value: null
                - name: DEVELOPMENT_INSTANCE
                  value: "true"
                - name: FEATURE_TOGGLES
                  value: enableSessionAutoRefresh=true
                - name: PORT
                  value: "8080"
                - name: REGION
                  value: null
                - name: IMAGE_TAG
                  value: 1.0.0
                - name: IMAGE_NAME
                  value: ghcr.io/platform-mesh/portal
                - name: COOKIE_DOMAIN
                  value: localhost
                - name: FRONTEND_PORT
                  value: "8000"
                - name: ENVIRONMENT
                  value: local
                - name: VALID_WEBCOMPONENT_URLS
                  value: .?
                - name: TEST_TEST
                  value: test test
                - name: DEMO_PORTAL_CONTEXT_CRD_GATEWAY_API_URL
                  value: https://${org-subdomain}portal.dev.local:8443/api/kubernetes-graphql-gateway/root:orgs:${org-name}/graphql
                - name: DEMO_PORTAL_CONTEXT_IAM_SERVICE_API_URL
                  value: https://portal.dev.local:8443/iam/query
