                  value: '{"account":{"contextProperty":"entityId"}}'
                - name: KUBECONFIG
                  value: /kubeconfig/kubeconfig
                - name: KUBECONFIG_KCP
                  value: /kcp-kubeconfig/kubeconfig
              image: ghcr.io/platform-mesh/portal:12345
              imagePullPolicy: IfNotPresent
              name: portal
              ports:
                - containerPort: 8080
                  name: http
                  protocol: TCP
                - containerPort: 9090
                  name: metrics
                  protocol: TCP
              resources:
                limits:
                  memory: 512Mi
                requests:
                  cpu: 40m
                  memory: 50Mi
              securityContext:
                readOnlyRootFilesystem: true
                runAsNonRoot: true
                seccompProfile:
                  type: RuntimeDefault
              volumeMounts:
                - mountPath: /kubeconfig
                  name: kubeconfig
                - mountPath: /kcp-kubeconfig
                  name: kcp-kubeconfig
          securityContext:
            runAsNonRoot: true
            seccompProfile:
              type: RuntimeDefault
          serviceAccountName: portal
          terminationGracePeriodSeconds: 10
          volumes:
            - name: kubeconfig
              secret:
                secretName: my-kubeconfig-secret
            - name: kcp-kubeconfig
              secret:
                secretName: my-kcp-kubeconfig-secret
